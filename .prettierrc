{
  "trailingComma": "none",
  "tabWidth": 4,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "bracketSpacing": true,
  "printWidth": 160,
  "plugins": [
    "prettier-plugin-apex"
  ],
  "overrides": [
    {
      "files": "*.cls",
      "options": {
        "parser": "apex",
        "tabWidth": 4,
        "semi": true,
        "singleQuote": true,
        "bracketSpacing": true,
        "apexInsertFinalNewline":false
      }
    },
    {
      "files": "**/lwc/**/*.html",
      "options": { "parser": "lwc" }
    },
    {
      "files": "*.{cmp,page,component}",
      "options": { "parser": "html" }
    }
  ]
}
